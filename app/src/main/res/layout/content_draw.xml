<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/RelativePhasePlane">

    <fragment
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:name="com.differentialeq.directionfield.PhasePlane"
        android:id="@+id/PhasePlaneFragment"
        tools:layout="@layout/fragment_phase_plane"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.differentialeq.directionfield.InputsToPlaneFragment"
        android:id="@+id/inputFragment"
        tools:layout="@layout/inputs_to_plane"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>