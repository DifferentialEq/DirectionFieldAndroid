<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_create_new_matrix"
    tools:context="com.differentialeq.directionfield.CreateNewMatrix"
    android:background="#000000">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/EnterMatrixLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/EnterMatrixText"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="5" />
        <Space
            android:layout_width="200px"
            android:layout_height="50px"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="4"/>

        <Space
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"/>
        <Space
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/a11"
            android:layout_row="2"
            android:layout_column="3"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/a12"
            android:layout_row="2"
            android:layout_column="4"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/a21"
            android:layout_row="3"
            android:layout_column="3"
            android:inputType="number|numberSigned|numberDecimal" />

        <EditText
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/a22"
            android:layout_row="3"
            android:layout_column="4"
            android:inputType="number|numberSigned|numberDecimal" />

        <Space
            android:layout_width="100px"
            android:layout_height="50px"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/computeMatrixButton"
            android:id="@+id/computeMatrixButton"
            android:layout_row="5"
            android:layout_column="3"
            android:layout_columnSpan="3"/>

    </GridLayout>
</RelativeLayout>
